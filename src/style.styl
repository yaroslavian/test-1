body
   background-color: #192329
   color: #fff

#app 
   width: 100%

.deviation-table
   font-family: Arial, Helvetica, sans-serif
   font-size: 14px
   width: 100%

   thead
      th
         color: #677d90
         cursor: pointer
         padding: 10px
         text-align: left 
         white-space: nowrap

   tbody
      tr
         &:nth-child(odd) 
            background-color: #1c252d
         &:hover
            background-color: darkgreen
            cursor: pointer
         td
            max-width: 100px
            padding: 10px
            overflow: hidden
            white-space: nowrap
            text-overflow: ellipsis

.indicator
   height 100%
   display: grid
   grid-template-columns: auto 100px auto
   min-width: 280px;
   
.bar-container   
   display: flex;
   width: 100%
   height 100%
   align-items: center;
   
.bar
   display: flex
   width: 80%
   background-color: #242e36
   &, & div 
      height 13px
      border-radius: 6px
